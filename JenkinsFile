pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'python:2-alpine'
                    image 'django'
                }
            }
            steps {
                sh 'pip install --upgrade pip'
                sh 'python -m py_compile Kela_clinic/views.py' 
                sh 'pip install django'
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'qnib/pytest'
                }
            }
            steps {
                sh 'py.test --verbose --junit-xml test-reports/results.xml Kela_clinic/tests.py'
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }
    }
}

pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'python:3.7'                   
                }
            }
            steps {
                withEnv(["HOME=${env.WORKSPACE}"]){
                sh 'python -m pip install django==2.1.15'
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'qnib/pytest'
                }
            }
            steps {
                // sh 'py.test --verbose --junit-xml test-reports/results.xml Kela_clinic/tests.py'
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }
    }
}

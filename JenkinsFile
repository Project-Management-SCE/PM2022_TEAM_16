pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'python:2-alpine'                    
                }
            }
            steps {
                sh 'python -m py_compile Kela_clinic/views.py' 
                sh 'virtualenv env && source env/bin/activate && pip install --upgrade -r requirements.txt'
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'qnib/pytest'
                }
            }
            steps {
                sh 'py.test --verbose --junit-xml test-reports/results.xml Kela_clinic/tests.py'
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }
    }
}

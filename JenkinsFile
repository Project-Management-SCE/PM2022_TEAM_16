pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'python:3.7-alpine3.10'
                }
            }
            steps {
                sh 'python -m py_compile Kela_clinic/views.py'
                sh 'Pip install django-jenkins'
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'qnib/pytest'
                }
            }
            steps {
                sh 'python manage.py test Kela_clinic/tests.py'
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }
    }
}

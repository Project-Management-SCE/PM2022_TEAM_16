pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'python:3.7'                    
                }
            }
            steps {
                sh 'python -m pip install --upgrade pip'
                sh 'pip install --user -r requirements.txt'
                sh 'python 'manage.py runserver'
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'qnib/pytest'
                }
            }
            steps {
                sh 'py.test --verbose --junit-xml test-reports/results.xml Kela_clinic/tests.py'
            }
            post {
                always {
                    junit 'test-reports/results.xml'
                }
            }
        }
    }
}
